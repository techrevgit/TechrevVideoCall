<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="2dp"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="40dp"
            android:background="@drawable/rectangle_ornaments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_back_round_grey_background"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lmdlogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/ivback"
                    android:text="eNotary On Call"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/call_view_section_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/white_background"
                    android:layout_marginRight="10dp"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/view"
                        android:background="@drawable/primary_circle_background"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        >

                        <Spinner
                            android:id="@+id/call_view_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/white_background"
                            android:clickable="true"
                            android:dropDownWidth="150dp"
                            />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="7dp"
                            android:src="@drawable/down_arrow"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/custom_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/toolbar"
            android:background="@drawable/rounded_corners_view"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@id/header_section"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/participant_section"
        >

        <RelativeLayout
            android:id="@+id/recording_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="7dp"
            android:background="@color/light_purple"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_expire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgRecording"
                android:gravity="center"
                android:text="This notarization process is being recorded"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgRecording"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/recording"
                android:visibility="visible" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="false"
            android:layout_below="@id/recording_section"
            android:layout_marginTop="7dp"
            >

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_color"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/videoCallContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_cornered_white_background"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <ImageButton
                                android:id="@+id/fullScreen"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="15dp"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_full_screen"
                                android:layout_alignParentRight="true"
                                />

                            <FrameLayout
                                android:id="@+id/video_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_purple" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/participant_initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="PS"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/nootherparticipant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:visibility="visible"
                    android:layout_below="@id/custom_rounded_view"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/noparticipant_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-60dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="You are the only person on this call. Please wait for other(s) to join."
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/reconnecting_progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/activeParticipantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:gravity="left"
            android:elevation="2dp"
            android:paddingLeft="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/participant_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/participantsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                >

                <FrameLayout
                    android:id="@+id/mainThumbnailView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_thumbnailView"
                        android:layout_width="100dp"
                        android:layout_height="115dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        card_view:cardBackgroundColor="#ffffff"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.twilio.video.VideoView
                                    android:id="@+id/thumbnail_video_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    app:tviMirror="true"
                                    app:tviOverlaySurface="false" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="You"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/participants_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/mainThumbnailView"
                    android:scrollbars="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llTest"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/speaker_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/white_circle_background"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/speaker"
                    />

                <ImageButton
                    android:id="@+id/add_file_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/white_circle_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_file"
                    />

                <ImageButton
                    android:id="@+id/switch_camera_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/white_circle_background"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_switch_camera_white_24dp"
                    />

                <ImageButton
                    android:id="@+id/mute_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_audio_white"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/local_video_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_video_white"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/share_screen_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/audio_refresh"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/view_participant_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/white_circle_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_icon"
                    android:tint="@color/color_primary" />

                <ImageButton
                    android:id="@+id/view_meeting_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/viewmeetingdetails"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/audio_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/audio_refresh"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/meeting_share_details"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_primary_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/meeting_share_details"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/location_sharing"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/white_circle_background"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/location_sharing"
                    android:tint="@color/color_primary"
                    tools:visibility="visible" />


                <ImageButton
                    android:id="@+id/expand_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/primary_circle_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/expand_right"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/capture_action_fab"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/primary_circle_background"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/capture"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/chat_action_fab"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/primary_circle_background"
                        android:padding="9dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chat_icon" />

                    <ImageView
                        android:id="@+id/chat_badge"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top|right"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/circle_background"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/connect_action_fab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/call_end" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

