<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="2dp"
    app:cardElevation="1dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context="cordova_plugin_techrev_videoconference.SignerAuthirizationDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authorize Notary to Capture My Signature &amp; Initial"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="10dp"
            />

        <CheckBox
            android:id="@+id/cb_allow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="During the Notarization process, if I am unable to capture &amp; upload my Signature &amp; Initial then I authorize Notary of eNotary On Call to capture my Signature &amp; Initial on my behalf."
            android:padding="5dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/gray_colored_round_corner_background"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/gray_colored_round_corner_background"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>